{
  "manifest_version": 3,
  "name": "sjeg's Brightness Inversion",
  "description": "__MSG_extension_description__",
  "default_locale": "en",
  "version": "1.3",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "assets/icon_sun.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "permissions": [
    "webNavigation",
    "scripting"
  ]
}